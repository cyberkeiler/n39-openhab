rule "Add MemberIn"
when
	Item Stat_MemberInAdd changed from OFF to ON
then
	postUpdate(Stat_MemberIn, Stat_MemberIn.state+1)
  postUpdate(Stat_MemberInAdd, OFF)
end

rule "Sub MemberIn"
when
	Item Stat_MemberInSub changed from OFF to ON
then
  if(Stat_MemberIn.state > 0){
	 postUpdate(Stat_MemberIn, Stat_MemberIn.state-1)
  }
  postUpdate(Stat_MemberInAdd, OFF)
end
